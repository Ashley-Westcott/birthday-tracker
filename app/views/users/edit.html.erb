<div align="center">
<h1>Edit Your Profile</h1>

<%=form_for @user do |f|%>
<%=f.label :username%><br>
<%=f.text_field :username%><br>
<br>
<%=f.label :first_name%><br>
<%=f.text_field :first_name%><br>
<br>
<%=f.label :last_name%><br>
<%=f.text_field :last_name%><br>
<br>
<%=f.label :email%><br>
<%=f.text_field :email%><br>
<br>
<%=f.label :birthday%><br>
<%=f.date_select :birthday, :order => [:month, :day, :year], :start_year => 1900, :end_year => Time.now.year%><br>
<br>
<%=f.label :telephone_number%><br>
<%=f.text_field :telephone_number%><br>
<br>
<%=f.label :img_url%><br>
<%=f.text_field :img_url%><br>
<br>
<%=f.submit %>
<%end%>
<br>
<br>

<%= button_to "Delete Account", @user, :method => :delete, data: { confirm: "Are you sure you want to delete your account?" } %>

</div>
