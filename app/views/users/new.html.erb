<div align="center">
<h1>Create your profile</h1>


<% if !!flash[:errors] %>
  <div class="alert alert-dismissible alert-primary">
    <button type="button" class="close" data-dismiss="alert">&times;</button>
      <% flash[:errors].each do |e| %>
        <strong>  <p><%= e %></p><strong>
      <% end %>
    <% end %>
</div>

<div align="center">
<%=form_for @user do |f|%>
<%=f.label :username%><br>
<%=f.text_field :username%><br>
<br>
<%=f.label :password%><br>
<%=f.text_field :password%><br>
<br>
<%=f.label :first_name%><br>
<%=f.text_field :first_name%><br>
<br>
<%=f.label :last_name%><br>
<%=f.text_field :last_name%><br>
<br>
<%=f.label :email%><br>
<%=f.text_field :email%><br>
<br>
<%=f.label :birthday%><br>
<%=f.date_select :birthday, :order => [:month, :day, :year], :start_year => 1900, :end_year => Time.now.year%><br>
<br>
<%=f.label :telephone_number%><br>
<%=f.text_field :telephone_number%><br>
<br>
<%=f.label :img_url%><br>
<%=f.text_field :img_url%><br>
<br>
<%=f.submit %>
<%end%>

</div>
